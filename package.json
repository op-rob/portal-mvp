{
  "name": "ownerpulse",
  "version": "1.0.0",
  "private": true,
  "description": "OwnerPulse - Property Owner Portal for STR Management Companies",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "deploy": "./scripts/deploy.sh",
    "deploy:backend": "./scripts/deploy-render.sh",
    "deploy:backend:railway": "cd backend && railway up",
    "deploy:frontend": "cd frontend && vercel --prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "author": "OwnerPulse Team",
  "license": "MIT"
}